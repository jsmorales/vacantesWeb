<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!-- configuracion de la pagina de inicio, controlador que carga las vacantes en idex.jsp-->
    <welcome-file-list>
        <welcome-file>
            homepage
        </welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>vancanteController</servlet-name>
        <servlet-class>vacatesWeb.controllers.vancanteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>siteController</servlet-name>
        <servlet-class>vacatesWeb.controllers.siteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>detalleVacanteController</servlet-name>
        <servlet-class>vacatesWeb.controllers.detalleVacanteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>usuarioController</servlet-name>
        <servlet-class>vacatesWeb.controllers.usuarioController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>vancanteController</servlet-name>
        <url-pattern>/vacante</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>siteController</servlet-name>
        <url-pattern>/homepage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>detalleVacanteController</servlet-name>
        <url-pattern>/detalleVacanteController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>usuarioController</servlet-name>
        <url-pattern>/usuario</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
